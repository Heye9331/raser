#!/usr/bin/env bash        

# Main driver to run RASER    
# Author SHI Xin <shixin@ihep.ac.cn>  
# Created [2021-03-21 Sun 10:04] 


usage() { 
    printf "NAME\n\trun - Main driver to run RASER\n"
    printf "\nSYNOPSIS\n"
    printf "\n\t%-5s\n" "./run [OPTION]" 
    printf "\nOPTIONS\n"    
    printf "\n\t%-9s  %-40s"  "0.1"       "RASER 2D"
	printf "\n\t%-9s  %-40s"  "0.2"       "RASER 3D" 
	printf "\n\t%-9s  %-40s"  "0.3"       "RASER LGAD"
    printf "\n\n" 
}

usage_0_1() { 
    printf "\n\t%-5s  %-40s\n"  "0.1.1"    "RASER 2D SiC basic information" 
    printf "\n\t%-5s  %-40s\n"  "0.1.2"    "2D batch model" 
    printf "\n\t%-5s  %-40s\n"  "0.1.3"    "raser 2D scan for time resolution..." 
    printf "\n\t%-5s  %-40s\n"  "0.1.4"    "get time resolution 2D" 
}
usage_0_2() { 
    printf "\n\t%-5s  %-40s\n"  "0.2.1"    "RASER 3D SiC basic information" 
    printf "\n\t%-5s  %-40s\n"  "0.2.2"    "3D batch model" 
    printf "\n\t%-5s  %-40s\n"  "0.2.3"    "raser 3D scan for time resolution..." 
	printf "\n\t%-5s  %-40s\n"  "0.2.9"    "Stop Batch background operation" 
}
usage_0_3() { 
    printf "\n\t%-5s  %-40s\n"  "0.3.1"    "RASER 2D LGAD" 
	printf "\n\t%-5s  %-40s\n"  "0.3.2"    "RASER 2D PIN"
}
if [[ $# -eq 0 ]]; then
    usage
    echo "Please enter your option: "
    read option
else
    option=$1 
    option2=$2  
    step_n=$3
    change_p=$4   
fi

sub_0_1(){
time_2D=2021_8_19_two_ele
case $option in 
    0.1.1) echo "raser 2D SiC basic information..."
        ./python/raser.py 3D 2D 0    
        ;;
    0.1.2) echo "2D batch model"
        ./python/run_job.py 2D sub_200 total_1000 voltage_-500 instance_0 
        ;;
    0.1.3) echo "raser 2D scan for time resolution..."
		source singularity_bashrc.sh
        mkdir out/fenics_${time_2D}/ -p
        rm out/fenics_${time_2D}/* -rf
        ./python/raser.py 3D 2D_scan out/fenics_${time_2D}/ ${option2} ${step_n} ${change_p}
        ;;

    0.1.4) echo "get time resolution 2D"
        mkdir out/fenics_${time_2D}/ -p
        singularity exec raser.simg python3 python/add_noise_raser.py out/fenics_${time_2D}/voltage_500.0 out/fenics_${time_2D}/sic_${time_2D}_result.root
        esac
}
 
sub_0_2(){
time_3D=2021_8_25_3D
case $option in 
    0.2.1) echo "raser 3D SiC basic information..."
        mkdir fig/ -p
        ./python/raser.py 3D 3D  0
		#0 is geant4 visualization useless, 1 is useful
        ;;
	0.2.2) echo "3D batch model"
        ./python/run_job.py 3D sub_200 total_1000 voltage_-500 instance_0 
        ;;
    0.2.3) echo "raser 3D scan for time resolution..."
		source singularity_bashrc.sh
        mkdir out/fenics_${time_3D}/ -p
        rm out/fenics_${time_3D}/* -rf
        ./python/raser.py 3D 3D_scan out/fenics_${time_3D}/ ${option2} ${step_n} ${change_p}
		;;
	# uncertain content
    # 0.2.4) echo "data processing gap"
    #     rm -rf result/sic_${time_gap}_result/*
    #     mkdir result/sic_${time_gap}_result/gap_35_voltage_350 -p
    #     singularity exec raser.simg python3 python/raser_read_sample.py out/fenics_${time_gap}/gap_35.0_voltage_350  result/sic_${time_gap}_result/gap_35_voltage_350/  V
    #     ;;
    # 0.2.5) echo "get time resolution voltage scan"
    #     mkdir result/voltage/root -p
    #     singularity exec raser.simg python3 python/add_noise_raser.py result/sic_${time_voltage}_result/gap_40_voltage_650.0/ result/voltage/root/sic_${time_voltage}_650_result.root
    #     ;;
    # 0.2.6) echo "get time resolution gap scan"
    #     rm -rf result/gap/root
    #     mkdir result/gap/root -p
    #     singularity exec raser.simg python3 python/add_noise_raser.py result/sic_${time_gap}_result/gap_44.0 result/gap/root/sic_${time_gap}_gap_44.0_result.root
    #     ;;
    # 0.2.7) echo "Batch background operation voltage scan"
    #     mkdir out/fenics_${time_voltage}/ -p
    #     python3 python/sub_job_3D.py 2000 10000 -500 5 
    #     ;;
    # 0.2.8) echo "Batch background operation gap scan"
    #     mkdir out/fenics_${time_gap}/ -p
    #     python3 python/run_job.py 2000 10000 35.0 0
    #     ;;
    0.2.9) echo "Stop Batch background operation"
        singularity instance stop --all
        esac
}
 

sub_0_3(){
Time=2021_5_28
case $option in 
    0.3.1) echo "raser 2D lgad electric field..."
		python3 python/raser.py 2D_SiC_LGAD
    	;;
    0.3.2) echo "raser 2D PIN electric field..."
		python3 python/raser.py 2D_SiC_PIN
		;;
	0.3.3) echo "raser 2D PIN TCT electric field..."
	    python3 python/raser.py 2D_LASER_SI_PIN
		;;
    0.3.4) echo "vmax compre"
        mkdir figure/ -p
        python3 python/draw_Vmax_com.py pin_compre
        ;;
    0.3.5) echo "vmax compre"
        python3 python/draw_Vmax_com.py pin_vbias
        ;;
		esac
}




case $option in 
   0.1) echo "RASER 2D"
        usage_0_1
        echo "Please enter your option: " 
        read option 
        sub_0_1 option 
        ;;
    0.1.*) echo "RASER 2D"
        sub_0_1 option
        ;;
   0.2) echo "RASER 3D"
        usage_0_2
        echo "Please enter your option: " 
        read option 
        sub_0_2 option 
        ;;
    0.2.*) echo "RASER 3D"
        sub_0_2 option 
		;;
   0.3) echo "RASER LGAD"
        usage_0_3
        echo "Please enter your option: " 
        read option 
        sub_0_3 option 
        ;;
    0.3.*) echo "RASER LGAD"
        sub_0_3 option 
		esac
